    {
      "type": "range",
      "id": "border_width",
      "label": "Border width",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 2,
      "info": "Not compatible with Tail"
    }
  ],
  "presets": [
    {
      "name": "SL Price Bubble Widget",
      "category": "Text"
    }
  ]
}
