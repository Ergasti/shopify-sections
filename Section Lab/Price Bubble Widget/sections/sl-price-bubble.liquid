{% comment %}
  Section Lab - Price Bubble Widget
  Source: Section Lab (paid bundle). Internal use only.
  Text bubble with optional icon and tail. Can be injected into product info via Custom Liquid.
{% endcomment %}

<style>
  #sl-price-bubble-{{ section.id }}.sl-bubble-section-wrapper {
    align-items: {{ section.settings.align_mobile }};
    width: fit-content;
    max-width: 100%;
    {% if section.settings.align_mobile == 'center' %}margin-left: auto; margin-right: auto;{% endif %}
  }

  @media screen and (min-width: 768px) {
    #sl-price-bubble-{{ section.id }}.sl-bubble-section-wrapper {
      align-items: {{ section.settings.align_desktop }};
      {% if section.settings.align_desktop == 'center' %}margin-left: auto; margin-right: auto;{% else %}margin-left: 0; margin-right: 0;{% endif %}
    }
  }

  #sl-price-bubble-{{ section.id }} .sl-bubble-container {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  #sl-price-bubble-{{ section.id }} .sl-icon-wrapper {
    background-color: #ffffff;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    overflow: hidden;
  }

  #sl-price-bubble-{{ section.id }} .sl-tail {
    position: relative;
    overflow: visible;
  }

  #sl-price-bubble-{{ section.id }} .sl-tail::after {
    content: '';
    position: absolute;
    left: 20%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
  }

  #sl-price-bubble-{{ section.id }} .sl-tail-down::after {
    bottom: -8px;
    border-top: 8px solid var(--bubble-bg, #F0F0F0);
  }

  #sl-price-bubble-{{ section.id }} .sl-tail-up::after {
    top: -8px;
    border-bottom: 8px solid var(--bubble-bg, #F0F0F0);
  }
</style>

<div
  id="sl-price-bubble-{{ section.id }}"
  class="sl-bubble-section-wrapper"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    display: flex;
    flex-direction: column;
  "
>
  <div
    class="sl-bubble {% if section.settings.tail != 'none' %}sl-tail sl-tail-{{ section.settings.tail }}{% endif %}"
    style="
      --bubble-bg: {{ section.settings.background_color }};
      background-color: {{ section.settings.background_color }};
      color: {{ section.settings.text_color }};
      border-radius: {{ section.settings.border_radius }}px;
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
      font-size: {{ section.settings.font_size }}px;
      padding: 4px 8px 4px 6px;
      position: relative;
      display: inline-block;
    "
  >
    <div class="sl-bubble-container">
      {% assign image_url = '' %}
      {% if section.settings.image_url != blank %}
        {% assign image_url = section.settings.image_url %}
      {% elsif section.settings.image != blank %}
        {% assign image_url = section.settings.image | image_url: width: 200 %}
      {% endif %}
      {% if image_url != blank %}
        <div
          class="sl-icon-wrapper"
          style="
            width: {{ section.settings.image_size }}px;
            height: {{ section.settings.image_size }}px;
            background-color: transparent;
          "
        >
          <img
            src="{{ image_url }}"
            alt=""
            width="{{ section.settings.image_size }}"
            height="{{ section.settings.image_size }}"
            loading="lazy"
            style="width: 100%; height: 100%; object-fit: cover;"
          >
        </div>
      {% endif %}
      {% comment %} Language detection: use Arabic if available and locale is Arabic {% endcomment %}
      {% assign lang = request.locale.iso_code | downcase %}
      {% if section.settings.bubble_text_ar != blank and lang == 'ar' %}
        <span>{{ section.settings.bubble_text_ar }}</span>
      {% else %}
        <span>{{ section.settings.bubble_text }}</span>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SL Price Bubble Widget",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "bubble_text",
      "label": "Text (English)",
      "default": "Only 0.27â‚¬ per day"
    },
    {
